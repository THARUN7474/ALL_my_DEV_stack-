<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white shadow-lg text-2xl w-full h-full flex flex-col items-center">
    <h1 class="mb-6">USER DETAILS</h1>
    <button class="mb-4 p-2 bg-blue-600 rounded hover:bg-blue-700">
        <a href="/" class="text-white">Add User</a>
    </button>
    <div class="users flex gap-4 flex-wrap justify-center">
        <% users.forEach(user => { %>
            <div class="max-w-xs p-4 bg-gray-800 rounded shadow-lg text-center">
                <img src="<%= user.image %>" alt="User Image" class="mb-4 rounded w-full h-48 object-cover object-fit">
                <p class="mb-2 text-lg font-semibold"><%= user.name %></p>
                <p class="mb-2 text-sm text-gray-400"><%= user.email %></p>
                <div class="flex justify-between mt-4">
                    <a href="/users/<%= user.id %>/edit" class="text-blue-500 underline">Edit User</a>
                    <a href="/users/<%= user.id %>/delete" class="text-red-500 underline">Delete User</a>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
